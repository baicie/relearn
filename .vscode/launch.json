{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(lldb) Launch", // 配置名称
      "type": "cppdbg", // 调试器类型
      "request": "launch", // 请求类型
      "program": "${workspaceFolder}/cpp/demo2", // 可执行文件的路径
      "args": [], // 传递给程序的命令行参数
      "stopAtEntry": false, // 是否在程序入口处停止
      "cwd": "${workspaceFolder}/cpp/demo2", // 工作目录
      "environment": [], // 环境变量
      "externalConsole": false, // 是否使用外部控制台
      "MIMode": "lldb", // MI 调试器模式
      "preLaunchTask": "build" // 在启动前执行的任务，通常是构建任务
    }
  ]
}
